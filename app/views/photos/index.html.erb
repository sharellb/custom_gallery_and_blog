<div class="row">
	<% @photos.each do |photo| %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<%= link_to image_tag(photo.link_url), photo.link_url.to_s, rel: :lazybox %>
				<div class="caption">
					<h3 class="text-center"><%= photo.title %></h3>
						<p class="text-justify"><%= photo.caption %><p>
				</div>
			</div>
		</div>
	<% end %>
</div>


