<%= form_for @photo, :html => {:multipart => true} do |f| %>
<div class="well">
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :caption %><br>
    <%= f.text_field :caption, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.file_field :link, class: 'form-control' %><br/>
  </div>
    <%= f.submit class: 'btn btn-default' %>
    <div class= "btn btn-danger" %><%= link_to 'Delete photo', @photo, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>
</div>